<h1>編集画面</h1>
<% @tweet.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>
<%= form_for @tweet do |f| %>
  <div class="form-group">
    <div class="col-lg-6">
      <%= f.text_field :text, placeholder: "#{@tweet.text}" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "保存", class: "btn btn-primary withripple" %>
  </div>
<% end %>
